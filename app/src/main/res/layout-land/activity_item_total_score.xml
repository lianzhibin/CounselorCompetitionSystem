<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_total_score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context="counselorcompetitionsystem.xioalian.com.counselorcompetitionsystem.ItemTotalScoreActivity">


    <ImageView
        android:background="@drawable/btn_bg"
        android:id="@+id/img_back_item_total_score"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="33dp"
        android:padding="6dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_return"/>


    <ImageView
        android:layout_width="37dp"
        android:layout_height="46dp"
        android:src="@mipmap/logo"
        android:layout_marginLeft="188dp"
        android:layout_marginTop="11dp"
        />

    <TextView
        android:id="@+id/tv_title_item_total_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:textSize="19dp"
        android:textStyle="bold"
        android:text="第五届高校辅导员职业能力培训大赛暨竞赛"
        />

    <TextView
        android:textStyle="bold"
        android:id="@+id/tv_item_name_item_total_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="19dp"
        android:text="案例分析比赛"
        />


    <ImageView
        android:id="@+id/iv_refresh_item_total_score"
        android:src="@drawable/icon_refech"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/btn_refresh_item_total_score"
        android:background="@drawable/btn_refresh"
        android:text="刷新"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        />


    <RelativeLayout

        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="96dp"
        android:background="#66ffffff"
        android:layout_width="738dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="41dp"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="15dp"
        android:text="组别："
        android:textSize="17dp"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="134dp"
        android:layout_width="200dp"
        android:layout_height="30dp">
        <ImageView
            android:background="@drawable/btn_corner_left"
            android:id="@+id/iv_left_move_item_total_score"
            android:layout_width="10dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_arror_left"/>
        <Button
            android:textSize="9dp"
            android:id="@+id/btn1_item_total_score"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:text="全部"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@drawable/btn_number" />

        <Button
            android:textStyle="bold"
            android:id="@+id/btn2_item_total_score"
            android:layout_width="10dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/btn_number"
            android:text="1"/>
        <Button
            android:textStyle="bold"
            android:id="@+id/btn3_item_total_score"
            android:layout_width="10dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/btn_number"
            android:text="2"/>

        <Button
            android:textStyle="bold"
            android:id="@+id/btn4_item_total_score"
            android:layout_width="10dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/btn_number"
            android:text="3"/>

        <Button
            android:textStyle="bold"
            android:id="@+id/btn5_item_total_score"
            android:layout_width="10dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/btn_number"
            android:text="4"/>


        <ImageView
            android:background="@drawable/btn_corner_right"
            android:id="@+id/iv_right_move_item_total_score"
            android:layout_width="10dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_arror_right"/>


    </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="450dp"
            android:background="@drawable/sv_bg"
            android:layout_marginTop="8dp"
            android:layout_height="35dp">
            <EditText
                android:textSize="15dp"
                android:padding="8dp"
                android:id="@+id/et_search_item_total_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="输入姓名或学号查找选手信息"
                >
            </EditText>
            <ImageView
                android:background="@drawable/btn_bg"
                android:id="@+id/img_search_item_total_score"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/icon_search"
                android:layout_marginLeft="210dp"
                android:clickable="true"
                />

        </RelativeLayout>

        <View
            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:layout_width="731dp"
            android:layout_height="1dp"
            android:background="@color/divide"
            >
        </View>

        <LinearLayout
            android:layout_width="750dp"
            android:layout_marginTop="57dp"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_height="26dp">

                <TextView
                android:clickable="true"
                android:id="@+id/tv_sort_id_item_total_score"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="0.5"
                />

            <TextView
                android:clickable="true"
                android:id="@+id/tv_sort_sno_total_score"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="学号"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1.5"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="学校"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="4"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="姓名"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1.5"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="性别"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1"
                />

            <TextView
                android:clickable="true"
                android:id="@+id/tv_sort_team_total_score"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="分组"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1"
                />



            <TextView
                android:clickable="true"
                android:id="@+id/tv_sort_appear_item_total_score"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="出场"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1"
                />

            <TextView
                android:clickable="true"
                android:id="@+id/tv_sort_A1_item_total_score"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="评委1"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1"
                />

            <TextView
                android:clickable="true"
                android:id="@+id/tv_sort_A2_item_total_score"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="评委2"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1"
                />

            <TextView
                android:clickable="true"
                android:id="@+id/tv_sort_A3_item_total_score"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="评委3"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1"
                />



            <TextView
                android:clickable="true"
                android:id="@+id/tv_sort_average_item_total_score"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="平均"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1"
                />

            <TextView
                android:clickable="true"
                android:id="@+id/tv_sort_standard_item_total_score"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="标准"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1"
                />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="备注"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_weight="1"
                />

        </LinearLayout>
        <View
            android:layout_centerHorizontal="true"
            android:layout_marginTop="87dp"
            android:layout_marginLeft="25dp"
            android:layout_width="731dp"
            android:layout_height="1dp"
            android:background="@color/divide"
            >
        </View>
            <android.support.v7.widget.RecyclerView
                android:scrollbars="vertical"
                android:layout_centerHorizontal="true"
                android:id="@+id/rv_item_total_score"
                android:layout_width="750dp"
                android:layout_marginTop="92dp"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>

    </RelativeLayout>






</RelativeLayout>
