<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="counselorcompetitionsystem.xioalian.com.counselorcompetitionsystem.MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/logo"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="53dp" />


    <RelativeLayout
        android:layout_width="288dp"
        android:background="@drawable/bg3"
        android:layout_height="289dp"
        android:layout_marginLeft="412dp"
        android:layout_marginTop="104dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号密码登陆"
            android:textColor="@color/white"
            android:textSize="11dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="10dp"
            />





        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="238dp"
            android:layout_height="278dp"
            android:orientation="vertical"
            android:layout_marginTop="54dp"
            android:layout_marginBottom="26dp"
            >

            <!-- 创建单选按钮组 -->
            <RadioGroup
                android:layout_weight="1"
                android:id="@+id/radioGroup1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerInParent="true" >

                <!-- 定义单选按钮 -->
                <RadioButton
                    android:id="@+id/rb_comission_main_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="评委" />

                <RadioButton
                    android:id="@+id/rb_arbitrary_main_activity"
                    android:layout_width="wrap_content"
                    android:text="仲裁"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_user"
                    android:layout_weight="1"
                    android:padding="8dp"
                    />

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:layout_marginLeft="10dp"
                    android:padding="8dp"
                    android:hint="请输入账号"/>

            </LinearLayout>


            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_height="0dp">


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_password"
                    android:layout_weight="1"
                    android:padding="8dp"
                    />
                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:hint="请输入密码"
                    android:layout_marginLeft="10dp"
                    android:padding="8dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <CheckBox
                    android:id="@+id/cb_remember_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否记住密码？"
                    />
            </LinearLayout>


            <Button
                android:id="@+id/btn_logging"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@color/landing"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="登陆"
                android:textSize="16dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                />


        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>
