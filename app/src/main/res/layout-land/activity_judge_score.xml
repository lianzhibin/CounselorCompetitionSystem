<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_total_score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context="counselorcompetitionsystem.xioalian.com.counselorcompetitionsystem.ItemTotalScoreActivity">


    <ImageView
        android:background="@drawable/btn_bg"
        android:padding="6dp"
        android:id="@+id/img_back_item_judge_score"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_return"/>


    <ImageView
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:src="@mipmap/logo"
        android:layout_marginLeft="188dp"
        android:layout_marginTop="20dp"

        />

    <TextView
        android:textStyle="bold"
        android:id="@+id/tv_judge_score_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textSize="19dp"
        android:text="第五届高校辅导员职业能力培训大赛暨竞赛"
        />
    <TextView
        android:textStyle="bold"
        android:id="@+id/tv_judge_score_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:textSize="17dp"
        android:text="案例分析比赛"
        />

    <RelativeLayout
        android:layout_marginTop="100dp"
        android:background="#66ffffff"
        android:gravity="center"
        android:layout_width="1177dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="103dp"
        android:layout_height="653dp"
        >
        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide"
            >
        </View>

        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_height="48dp">

            <Button
                android:id="@+id/btn_id_judge_score_activity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="编号"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="21dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="组别"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="21dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="性别"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="21dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_myscore_judge_score_activity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="分数"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="21dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="备注"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="21dp"
                android:layout_weight="4"
                />

        </LinearLayout>

        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide"
            >
        </View>


        <android.support.v7.widget.RecyclerView
            android:scrollbars="vertical"
            android:id="@+id/rv_judge_score"
            android:layout_width="match_parent"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="8dp"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

</RelativeLayout>
